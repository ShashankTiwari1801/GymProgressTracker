<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1514"
    tools:context=".ExerciseRecorderActivity">
    <include
        android:id="@+id/LL_EX_HEADER"
        layout="@layout/exercise_header"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Add Set"
        android:textSize="18sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/LL_ADD_SET"
        layout="@layout/add_set_card"/>
    <TextView
        android:layout_width="match_parent"
        android:text="GRAPH"
        android:gravity="center"
        android:id="@+id/TV_GRAPH_BTN"
        android:layout_height="50sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/LL_SET_LIST"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    </LinearLayout>
    </ScrollView>
</LinearLayout>