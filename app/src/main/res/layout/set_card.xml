<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:rowCount="3"
        android:columnCount="4"
        android:id="@+id/GL_CARD"
        android:layout_height="100sp">
        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:text="100"
            android:textColor="#4C4C4C"
            android:id="@+id/TV_CARD_DATE"
            android:paddingHorizontal="50sp"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            />
        <TextView
            android:layout_row="1"
            android:text="100"
            android:id="@+id/TV_CARD_SET_ID"
            android:textSize="20sp"
            android:textColor="#808080"
            android:paddingLeft="30sp"
            android:gravity="left"
            android:layout_column="0"
            />
        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:paddingHorizontal="20sp"
            android:text="100"
            android:id="@+id/TV_CARD_WEIGHT"
            android:textSize="30sp"
            android:gravity="right"
            android:layout_columnWeight="6"
            />
        <TextView
            android:layout_row="1"
            android:text="100"
            android:id="@+id/TV_CARD_REPS"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_column="2"
            android:layout_columnWeight="4"
            />
        <TextView
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/TV_CARD_REMOVE"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:layout_marginRight="10sp"
            android:background="#C51162"
            android:layout_column="3"/>
        <TextView
            android:layout_row="2"
            android:id="@+id/TV_CARD_CAL_VIEW"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textColor="#FF6D00"
            android:text="0 kcals"
            android:gravity="right"
            android:paddingRight="80sp"
            android:layout_columnSpan="4"/>
    </GridLayout>

</LinearLayout>